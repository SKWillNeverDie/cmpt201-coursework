#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(void) {
  char s[] = "Tomorrow is Friday.";
  char d[] = " ";

  char *portion1 = strtok(s, d);
  printf("%s\n", portion1);

  char *portion2 = strtok(NULL, d);
  printf("%s\n", portion2);

  char *portion3 = strtok(NULL, d);
  printf("%s\n", portion3);

  char *portion4 = strtok(NULL, d);
  printf("%s\n", portion4);

  printf("Please enter some text:");
  return 0;
}
